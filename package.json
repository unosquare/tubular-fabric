{
  "name": "tubular-fabric",
  "version": "3.1.1",
  "description": "Unosquare Tubular Fabric",
  "main": "dist/index.js",
  "scripts": {
    "build:docs": "parcel build ./srcdocs/index.html --no-source-maps --public-url /tubular-fabric/ -d ./docs",
    "build:sample": "parcel build ./sample/app/index.html --no-source-maps -d ./distsample",
    "build": "tsc --p ./tsconfigs/tsconfig.tubular.json",
    "start": "parcel ./sample/app/index.html --open --port 8989 --no-source-maps -d ./distsample",
    "debug": "parcel ./sample/app/index.html --open --port 8989 -d ./distsample",
    "start:docs": "parcel ./srcdocs/index.html --no-source-maps --port 8080 --open -d ./docs",
    "check": "npm run build && npm test",
    "lint": "tsc --p ./tsconfigs/tsconfig.tubular.json --noEmit && eslint ./src/**/*.{js,ts,tsx} --quiet",
    "lintfix": "tsc --p ./tsconfigs/tsconfig.tubular.json --noEmit && eslint ./src/**/*.{js,ts,tsx} --quiet --fix",
    "test": "jest",
    "postbuild:docs": "xcopy .\\srcdocs\\static .\\docs\\static\\",
    "poststart:docs": "xcopy .\\srcdocs\\static .\\docs\\static\\",
    "preparepackage": "npm run build && npm run copypackage && cd dist && npm pack",
    "copypackage": "npx shx cp package.json dist"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/DataGrid.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.base.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/tubular-fabric.git"
  },
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/tubular-fabric/issues"
  },
  "homepage": "https://github.com/unosquare/tubular-fabric#readme",
  "dependencies": {
    "office-ui-fabric-react": "^7.81.0",
    "tubular-common": "^3.0.5",
    "tubular-react-common": "1.0.7"
  },
  "devDependencies": {
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "typescript": "^3.7.4"
  },
  "parcelCleanPaths": [
    "docs/*.*",
    "distsample/*.*"
  ]
}
