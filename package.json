{
  "name": "tubular-fabric",
  "version": "0.0.3",
  "description": "Unosquare Tubular for Fabric",
  "main": "dist/index.js",
  "scripts": {
    "build:sample": "parcel build ./sample/app/index.html --no-source-maps -d ./distsample",
    "build": "tsc --p ./tsconfig.json",
    "start": "parcel ./sample/app/index.html --open --port 8989 --no-source-maps -d ./distsample",
    "debug": "parcel ./sample/app/index.html --open --port 8989 -d ./distsample",
    "check": "npm run build && npm test",
    "lint": "tsc --p ./tsconfig.json --noEmit && eslint ./src/**/*.ts --quiet",
    "lint:fix": "tsc --p ./tsconfig.json --noEmit && eslint ./src/**/*.ts --quiet --fix",
    "test": "jest"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/DataGrid.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.base.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unosquare/tubular-fabric.git"
  },
  "author": "Unosquare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unosquare/tubular-fabric/issues"
  },
  "homepage": "https://github.com/unosquare/tubular-fabric#readme",
  "dependencies": {
    "office-ui-fabric-react": "^7.101.0",
    "tubular-common": "^3.1.10",
    "tubular-react-common": "1.0.19"
  },
  "devDependencies": {
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-easy": "^1.0.2",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "typescript": "^3.8.3"
  },
  "parcelCleanPaths": [
    "docs/*.*",
    "distsample/*.*"
  ],
  "files": [
    "dist"
  ]
}
